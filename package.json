{
    "name": "certish",
    "version": "0.1.0",
    "description": "The public key infrastructure for the public",
    "homepage": "https://certi.sh",
    "repository": "github:certish/certish",
    "bugs": {
        "url": "https://github.com/certish/certish/labels/bug"
    },
    "contributors": [
        "Grant Burry <grant@burry.me> (https://grantburry.com)"
    ],
    "license": "GPL-3.0+",
    "keywords": [
        "pki",
        "x509"
    ],
    "private": true,
    "scripts": {
        "eslint": "eslint",
        "lint": "npm-run-all 'eslint {@} --ignore-path .gitignore .' --",
        "lint:fix": "npm-run-all 'lint --fix {@}' --",
        "lint:report": "npm-run-all 'lint --format html --output-file eslint-report.html {@}' --",
        "test": "jest --env=jsdom --passWithNoTests",
        "test:watch": "npm-run-all 'test --watch {@}' --",
        "test:cover": "npm-run-all 'test --coverage {@}' --",
        "test:ci": "npm-run-all 'test:cover --ci {@}' --",
        "open-coverage": "open-cli coverage/lcov-report/index.html",
        "coverage": "npm-run-all 'test:cover {@}' open-coverage --",
        "build": "next build",
        "dev": "next dev",
        "start": "next start",
        "export": "next export",
        "deploy": "now"
    },
    "engines": {
        "node": ">=8"
    },
    "babel": {
        "presets": [
            "next/babel"
        ],
        "plugins": [
            [
                "styled-components",
                {
                    "ssr": true,
                    "displayName": true,
                    "preprocess": false
                }
            ]
        ]
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "plugins": [
            "notice",
            "prettier",
            "react"
        ],
        "extends": [
            "eslint:recommended",
            "airbnb",
            "prettier",
            "prettier/babel",
            "prettier/react"
        ],
        "env": {
            "node": true,
            "es6": true,
            "commonjs": true
        },
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module",
            "allowImportExportEverywhere": false,
            "codeFrame": false
        },
        "globals": {
            "it": true,
            "expect": true,
            "describe": true,
            "jest": true,
            "document": true,
            "test": true,
            "window": true,
            "getComputedStyle": true,
            "fetch": true,
            "WebSocket": true,
            "alert": true,
            "URLSearchParams": true,
            "React": true
        },
        "rules": {
            "function-paren-newline": [
                "error",
                "consistent"
            ],
            "import/prefer-default-export": 0,
            "jsx-a11y/anchor-is-valid": 0,
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error",
                        "info"
                    ]
                }
            ],
            "no-multiple-empty-lines": [
                "error",
                {
                    "max": 2,
                    "maxEOF": 1
                }
            ],
            "notice/notice": [
                "error",
                {
                    "templateFile": "COPYRIGHT"
                }
            ],
            "prefer-destructuring": [
                "error",
                {
                    "VariableDeclarator": {
                        "array": false,
                        "object": true
                    },
                    "AssignmentExpression": {
                        "array": false,
                        "object": false
                    }
                },
                {
                    "enforceForRenamedProperties": false
                }
            ],
            "prettier/prettier": "warn",
            "quote-props": [
                "error",
                "consistent"
            ],
            "react/destructuring-assignment": 0,
            "react/jsx-filename-extension": 0,
            "react/jsx-first-prop-new-line": [
                1,
                "multiline"
            ],
            "react/jsx-max-props-per-line": [
                1,
                {
                    "when": "multiline"
                }
            ],
            "react/jsx-props-no-spreading": 0,
            "react/no-find-dom-node": 0,
            "react/react-in-jsx-scope": 0,
            "react/sort-comp": 0,
            "react/no-array-index-key": 0,
            "import/no-extraneous-dependencies": [
                "error",
                {
                    "packageDir": "."
                }
            ]
        },
        "settings": {
            "import/resolver": {
                "node": {
                    "extensions": [
                        ".js",
                        ".jsx",
                        ".ts",
                        ".tsx"
                    ]
                }
            }
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "singleQuote": true
    },
    "jest": {
        "setupFiles": [
            "<rootDir>/jest.setup.js"
        ],
        "testPathIgnorePatterns": [
            "<rootDir>/.next/",
            "<rootDir>/node_modules/"
        ],
        "collectCoverageFrom": [
            "**/*.js",
            "!**/node_modules/**"
        ],
        "moduleFileExtensions": [
            "js",
            "jsx",
            "json",
            "node"
        ],
        "moduleNameMapper": {
            "^typeface-": "<rootDir>/__mocks__/empty-module.js"
        },
        "transform": {
            "^.+\\.js$": "babel-jest",
            ".+\\.(css|styl|less|sass|scss)$": "jest-transform-css"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "post-checkout": "amplify env checkout $(git rev-parse --abbrev-ref HEAD)",
            "post-pull": "amplify env pull $(git rev-parse --abbrev-ref HEAD)"
        }
    },
    "lint-staged": {
        "!(.next|out|coverage|node_modules)/**/!(*test).js": [
            "prettier --write",
            "eslint --fix",
            "git add --force"
        ],
        "*.{json,md}": [
            "prettier --write",
            "git add --force"
        ]
    },
    "dependencies": {
        "@zeit/next-css": "^1.0.1",
        "grommet": "^2.7.7",
        "next": "9.0.5",
        "react": "16.9.0",
        "react-dom": "16.9.0",
        "react-helmet": "^5.2.1",
        "styled-components": "^4.3.2",
        "typeface-metropolis": "^0.0.74"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.3",
        "babel-jest": "^24.9.0",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "eslint": "^6.3.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.1.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-notice": "^0.8.9",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.3",
        "husky": "^3.0.4",
        "jest": "^24.9.0",
        "jest-transform-css": "^2.0.0",
        "lint-staged": "^9.2.5",
        "npm-run-all": "^4.1.5",
        "open-cli": "^5.0.0",
        "prettier": "^1.18.2",
        "prop-types": "^15.7.2",
        "react-addons-test-utils": "^15.6.2",
        "react-test-renderer": "^16.9.0"
    }
}
